<% content_for :body_content_title do %>
  <%= @contact.telephone %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Telephone</h1>
    <p>
      <%=raw @contact.telephone %>
    </p>
  </section>
  <section>
    <h1>Fax</h1>
    <p>
      <%=raw @contact.fax %>
    </p>
  </section>
  <section>
    <h1>Postcode</h1>
    <p>
      <%=raw @contact.postcode %>
    </p>
  </section>
  <section>
    <h1>Email</h1>
    <p>
      <%=raw @contact.email %>
    </p>
  </section>
  <section>
    <h1>Address</h1>
    <p>
      <%=raw @contact.address %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="contacts">
      <% @contacts.each do |contact| %>
        <li>
          <%= link_to contact.telephone, refinery.contacts_contact_path(contact) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
