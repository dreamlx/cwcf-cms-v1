<% content_for :body_content_title do %>
  <%= @previou.title %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Title</h1>
    <p>
      <%=raw @previou.title %>
    </p>
  </section>
  <section>
    <h1>Previou Avatar</h1>
    <p>
      <%=raw @previou.previou_avatar_id %>
    </p>
  </section>
  <section>
    <h1>Description</h1>
    <p>
      <%=raw @previou.description %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="previous">
      <% @previous.each do |previou| %>
        <li>
          <%= link_to previou.title, refinery.previous_previou_path(previou) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
