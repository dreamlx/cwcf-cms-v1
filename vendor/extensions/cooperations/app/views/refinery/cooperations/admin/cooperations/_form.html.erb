<%= form_for [refinery, :cooperations_admin, @cooperation] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @cooperation,
              :include_object_name => true %>

  <div class='field'>
    <%= f.label :title -%>
    <%= f.text_field :title, :class => 'larger widest' -%>
  </div>

  <div class='field'>
    <%= f.label :cooperation_avatar_id -%>
    <%= f.number_field :cooperation_avatar_id -%>
  </div>

  <div class='field'>
    <%= f.label :main_url -%>
    <%= f.text_field :main_url -%>
  </div>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.cooperations.admin.cooperations.cooperation'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @cooperation.title) -%>
<% end -%>
