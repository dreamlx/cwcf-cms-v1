<%= form_for [refinery, :cooperations_admin, @cooperation_type] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @cooperation_type,
              :include_object_name => true %>

  <div class='field'>
    <%= f.label :name -%>
    <%= f.text_field :name, :class => 'larger widest' -%>
  </div>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.cooperation_types.admin.cooperation_types.cooperation_type'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @cooperation_type.name) -%>
<% end -%>
