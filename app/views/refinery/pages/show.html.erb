<div class='show_container'>
	<div class='show_body'>
		<h1 id='body_content_title'><%=raw @page.title() %></h1>
		<section id='body'>
		  <%=raw @page.content_for(:body) %>
		</section>
	</div>
</div>

<% content_for :stylesheets do %>
  <% if @page.background_image.present? %>
  <style type="text/css">
    body {
      background-image: url(<%= @page.background_image.url -%>);
    }
  </style>
  <% end %>
<% end %>
