<div class="image_source"><%=raw @page.content_for(:carousel_images) %></div>
<div id="carousel-banners" class="carousel slide" data-ride="carousel" data-interval="3000">
    <div class="carousel-inner" role="listbox">

    </div>
    <a class="left carousel-control" data-target="#carousel-banners" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" data-target="#carousel-banners" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
<div class="countdown_box">
  <span>
    距离展会开幕还有
  </span>
  <div class="countdown">
    <%=raw @page.content_for(:time) %>
  </div>
</div>
