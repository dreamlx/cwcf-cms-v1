<div id="carousel-banners" class="carousel slide" data-ride="carousel" data-interval="2000">
    <div class="carousel-inner" role="listbox">
            <div  class="active item">
               <img src='<%= asset_path("preview_1.jpg") %>' class="img-responsive">
            </div>
            <div class="item">
               <img src='<%= asset_path("preview_2.jpg") %>' class="img-responsive">
            </div>
            <div class="item">
               <img src='<%= asset_path("preview_3.jpg") %>' class="img-responsive">
            </div>
            <div class="item">
               <img src='<%= asset_path("preview_4.jpg") %>' class="img-responsive">
            </div>
            <div class="item">
               <img src='<%= asset_path("preview_5.jpg") %>' class="img-responsive">
            </div>
    </div>
