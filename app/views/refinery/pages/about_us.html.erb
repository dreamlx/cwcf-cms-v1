<div class='show_container'>
  <div class='show_body'>
    <h1 id='body_content_title'><%=raw @page.title() %></h1>
    <section id='body'>
      <% @contact_types.each do |contact_type| %>
        <h4><%= contact_type.name %></h4>
        <%= render partial: 'refinery/contacts/contacts/contact_item',
            collection: ::Refinery::Contacts::Contact.where(:contact_type_id => contact_type.id)%>
        <div class="margin-bottom"></div>
      <% end %>
    </section>
  </div>
</div>

<% content_for :stylesheets do %>
  <% if @page.background_image.present? %>
  <style type="text/css">
    body {
      background-image: url(<%= @page.background_image.url -%>);
    }
  </style>
  <% end %>
<% end %>
