<%= form_for [refinery, :previous_admin, @previou] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @previou,
              :include_object_name => true %>

  <div class='field'>
    <%= f.label :title -%>
    <%= f.text_field :title, :class => 'larger widest' -%>
  </div>

  <div class="field">
    <%= f.label :previou_avatar %>
    <%= render :partial => "/refinery/admin/image_picker", :locals => {
      :f => f,
      :field => :previou_avatar_id,
      :image => f.object.previou_avatar,
      :toggle_image_display => false
    }
    %>
  </div>

  <div class='field'>
    <%= render '/refinery/admin/wysiwyg',
                :f => f,
                :fields => [:description],
                :object => "previous/previou" -%>
  </div>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.previous.admin.previous.previou'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @previou.title) -%>
<% end -%>

<% content_for :javascripts do -%>
  <script>
    $(document).ready(function(){
      page_options.init(false, '', '');
    });
  </script>
<% end -%>
