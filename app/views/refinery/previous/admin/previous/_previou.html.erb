<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(previou) -%>">
  <span class='title'>
    <%= previou.title %>

  </span>
  <span class='actions'>

    <%= link_to refinery_icon_tag("application_go.png"), '/news/previous/'+previou.id.to_s(),
        :title => t('.view_live_html'),
        :target => "_blank" %>

    <%= link_to refinery_icon_tag("application_edit.png"), refinery.edit_previous_admin_previou_path(previou),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), refinery.previous_admin_previou_path(previou),
        :class => "cancel confirm-delete",
        :title => t('.delete'),
        :confirm => t('message', :scope => 'refinery.admin.delete', :title => previou.title),
        :method => :delete %>
  </span>
</li>
