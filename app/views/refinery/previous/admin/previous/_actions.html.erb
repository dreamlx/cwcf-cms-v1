<ul>
  <% if ::Refinery::Previous::Admin::PreviousController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.previous_admin_previous_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_previous_admin_previou_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::Previous::Admin::PreviousController.sortable? && ::Refinery::Previous::Previou.many? %>
  <li>
    <%= link_to t('.reorder', :what => "Previous"),
                 refinery.previous_admin_previous_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Previous"),
                 refinery.previous_admin_previous_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
