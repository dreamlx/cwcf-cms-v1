<div class="store_box">
  <h1>展区列表 <a href="/refinery" class="return-admin">Admin</a></h1>

  <table>
    <tr>
      <th>展区编号</th>
      <th>展区的列数</th>
      <th>展区的行数</th>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
    </tr>

    <% @stores.each do |store| %>
    <tr>
      <td><%= store.name %></td>
      <td><%= store.x_no %></td>
      <td><%= store.y_no %></td>
      <td><%= link_to '查看当前展区', "/admin/stores/"+ store.id.to_s() %></td>
      <td><%= link_to '编辑当前展区', "/admin/stores/"+ store.id.to_s() +"/edit" %></td>
      <td><%= link_to '删除当前展区', "/admin/stores/"+ store.id.to_s(), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <td><%= link_to '编辑展位坐标', "/admin/stores/"+ store.id.to_s() +"/editxy" %></td>
    </tr>
    <% end %>
  </table>

  <br />

  <%= link_to '增加新展区', "/admin/stores/new" %>
</div>
