<%= form_for(@product) do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :status %><br />
    <%= f.text_field :status %>
  </div>
  <div class="field">
    <%= f.label :number %><br />
    <%= f.text_field :number %>
  </div>
  <div class="field">
    <%= f.label :store -%>
    <select id="product_store" name="product[store_id]">
      <% @stores.each do |store| %>
        <option value="<%= store.id %>"><%= store.name %></option>
      <% end %>
    </select>
  </div>
  <div class="field">
    <%= f.label :x_c %><br />
    <input id="product_x_c" name="product[x_c]" size="30" type="text">
  </div>
  <div class="field">
    <%= f.label :y_c %><br />
    <input id="product_y_c" name="product[y_c]" size="30" type="text">
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
