<h1>Vip买家 和 晶品荟 申请</h1>

<table>
  <tr>
    <th>姓名</th>
    <th>职务</th>
	<th>邮箱</th>
    <th>公司名称</th>
    <th>地址</th>
    <th>邮编</th>
    <th>电话</th>
    <th>手机</th>
    <th>网址</th>
    <th>参展次数</th>
    <th>购买数量</th>
	<th>申请类型</th>
    <th>状态</th>
  </tr>

<% @vipers.each do |viper| %>
  <tr>
    <td><%= viper.name %></td>
    <td><%= viper.job %></td>
	<td><%= viper.email %></td>
    <td><%= viper.co_name %></td>
    <td><%= viper.address %></td>
    <td><%= viper.zip %></td>
    <td><%= viper.tel %></td>
    <td><%= viper.phone %></td>
    <td><%= viper.co_url %></td>
    <td><%= viper.t_ex %></td>
    <td><%= viper.vip_num %></td>
	<td>
		<% if viper.app_type == "vip" %>
			<%= "Vip买家" %>
		<% else %>
			<%= "晶品荟" %>
		<% end %> 
	</td>
    <td><%= viper.status %></td>
  </tr>
<% end %>
</table>